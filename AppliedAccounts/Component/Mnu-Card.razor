@if (Card is not null)
{
    <div class="card text-bg-light shadow-sm mb-3" style="min-height: 250px;">
        <div class="card-header fw-bold">@Card.Heading</div>
        <div class="card-body p-0 d-flex flex-column flex-md-row h-100">
            <!-- Left Side: Icon -->



            <div class="d-none d-sm-flex align-items-start justify-content-center bg-primary bg-opacity-10"
                 style="width: 100px; min-height: 100%; padding-left:3px; padding-right:3px">
                <i class="@Card.CardIcon fs-2 pt-1 text-success"></i>
            </div>

            <!-- Right Side: Content (Forced to Top) -->
            <div class="p-3 flex-grow-1">
                <!-- Removed flex-column -->
                <div>
                    <!-- Content stays at top -->
                    <h5 class="card-title">@Card.CardTitle</h5>
                    <p class="card-text mb-3">@Card.Description</p>
                </div>
                <!-- Button (manually pushed to bottom) -->
                <div class="mt-auto">
                    <!-- Uses margin-top: auto -->
                    <button class="btn btn-primary btn-sm d-inline-flex align-items-center gap-2"
                            @onclick="HandleClick">
                        <i class="fas fa-arrow-right"></i> @Card.BtnText
                    </button>
                </div>
            </div>
        </div>
    </div>
}